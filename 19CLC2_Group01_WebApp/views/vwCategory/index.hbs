<div class="card text">
    <h4 class="card-header d-flex justify-content-between">
        Categories
        <a class="btn btn-sm btn-outline-primary" href="/admin/categories/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Category
        </a>
    </h4>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each this.categories}}
            <tr>
                <th scope="row">{{CatID2}}</th>
                <td>{{CatName2}}</td>
                <td class="text-right"><a name="" id="" class="btn btn-sm btn-primary" href="/admin/categories/edit?id={{CatID2}}" role="button">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <div class="card-footer text-muted">
        2 days ago
    </div>
</div>